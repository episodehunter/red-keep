{
  "name": "red-keep",
  "description": "GraphQL interface for episodehunters database",
  "version": "1.0.0",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "compile": "tsc --watch",
    "start": "node dist/index.js",
    "start:dev": "NODE_ENV=develop node --inspect dist/index.js"
  },
  "author": "tjoskar <kontakta@oskarkarlsson.nu>",
  "bugs": {
    "url": "https://github.com/episodehunter/red-keep/issues",
    "email": "kontakta@oskarkarlsson.nu"
  },
  "dependencies": {
    "apollo-engine": "^1.0.4",
    "apollo-server-express": "^1.3.2",
    "body-parser": "^1.18.2",
    "chain-spy": "^1.0.0",
    "express": "^4.16.3",
    "express-jwt": "^5.3.1",
    "graphql": "^0.13.2",
    "graphql-tools": "^2.23.1",
    "jwks-rsa": "^1.2.1",
    "knex": "^0.14.4",
    "logdna": "^2.0.0",
    "monet": "^0.9.0-alpha.4",
    "mysql": "^2.15.0",
    "ramda": "^0.25.0",
    "raven": "^2.4.2",
    "simple-spy": "^2.2.1"
  },
  "devDependencies": {
    "@types/express": "^4.11.1",
    "@types/graphql": "^0.12.6",
    "@types/jest": "22.2.2",
    "@types/knex": "^0.14.9",
    "@types/node": "^9.6.0",
    "@types/ramda": "^0.25.20",
    "jest": "22.4.3",
    "ts-jest": "^22.4.2",
    "typescript": "^2.7.2"
  },
  "homepage": "https://github.com/episodehunter/red-keep",
  "keywords": [
    ""
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/episodehunter/red-keep"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testEnvironment": "node",
    "testRegex": "src/.*\\.(test|spec)\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/",
      "<rootDir>/seed-db/",
      "<rootDir>/node_modules/",
      "<rootDir>/.*\\.definition\\.ts$"
    ]
  },
  "now": {
    "name": "episodehunter-red-keep",
    "alias": "redkeep.episodehunter.tv",
    "files": [
      "dist"
    ],
    "env": {
      "EH_DB_HOST": "@eh-db-host",
      "EH_DB_USERNAME": "@eh-db-username",
      "EH_DB_PASSWORD": "@eh-db-password",
      "EH_DB_DATABASE": "@eh-db-database",
      "EH_DB_PORT": "@eh-db-port",
      "EH_RAVEN_DSN": "@eh-raven-dsn",
      "EH_RAVEN_PROJECT": "@eh-raven-project",
      "LOGDNA_KEY": "@logdna-key",
      "API_KEY": "@red-keep-api-key",
      "APOLLO_ENGINE_API_KEY": "@red-keep-apollo-engine-api-key",
      "NODE_ENV": "production"
    },
    "scale": {
      "sfo1": {
        "min": 1,
        "max": "auto"
      },
      "bru1": {
        "min": 1,
        "max": "auto"
      }
    }
  }
}
